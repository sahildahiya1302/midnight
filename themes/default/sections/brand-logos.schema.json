{
  "name": "Brand Logos",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Trusted by Top Brands"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Layout Style",
      "default": "slider",
      "options": [
        { "value": "slider", "label": "Carousel Slider" },
        { "value": "grid", "label": "Static Grid" }
      ]
    },
    {
      "type": "number",
      "id": "max_logos",
      "label": "Max Logos to Show",
      "default": 10,
      "min": 1,
      "max": 20
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay (for slider)",
      "default": true
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "list",
      "id": "logos",
      "label": "Brand Logos",
      "default": [],
      "item": {
        "type": "image",
        "label": "Logo Image"
      }
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        { "type": "image", "id": "brand_image", "label": "Brand Image" },
        { "type": "url", "id": "brand_link", "label": "Brand Link", "default": "#" }
      ]
    }
  ],
  "max_blocks": 10
  ,
  "presets": {
    "default": {
      "name": "Brand Logos",
      "blocks": [
        { "type": "logo", "settings": { "brand_image": "assets/images/logo.png", "brand_link": "#" } },
        { "type": "logo", "settings": { "brand_image": "assets/images/logo.png", "brand_link": "#" } },
        { "type": "logo", "settings": { "brand_image": "assets/images/logo.png", "brand_link": "#" } },
        { "type": "logo", "settings": { "brand_image": "assets/images/logo.png", "brand_link": "#" } }
      ]
    }
  }
}
