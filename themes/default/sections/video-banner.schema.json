      "id": "button_link",
      "label": "Button Link",
      "default": "#"
    },
    {
      "type": "select",
      "id": "video_type",
      "label": "Video Type",
      "default": "mp4",
      "options": [
        { "value": "mp4", "label": "Self-hosted MP4" },
        { "value": "youtube", "label": "YouTube Video ID" },
        { "value": "vimeo", "label": "Vimeo Video ID" }
      ]
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video Source (URL or ID)",
      "default": "https://cdn.example.com/promo.mp4"
    },
      {
        "type": "checkbox",
        "id": "overlay",
        "label": "Enable Dark Overlay",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "video",
        "name": "Video",
        "settings": [
          { "type": "text", "id": "video_url", "label": "Video URL" },
          { "type": "text", "id": "heading", "label": "Heading" },
          { "type": "text", "id": "cta", "label": "CTA" }
        ]
      }
    ],
    "max_blocks": 1
